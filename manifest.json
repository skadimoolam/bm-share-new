{
  "name": "Bookmark-Share",
  "version": "2.1.3",
  "manifest_version": 2,
  "description": "Simple Bookmark sharing tool",
  "content_security_policy": "script-src 'self' https://*.firebaseio.com; object-src 'self'",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "page": "./app/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "https://*.firebaseio.com/",
    "contextMenus",
    "notifications",
    "tabs",
    "storage"
  ]
}
